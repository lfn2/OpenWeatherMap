<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <string name="app_name">OpenWeatherMap</string>
    <string name="action_settings">Settings</string>
    <string name="action_share">Share</string>

    <!--share string-->
    <string name="share_string">Today\'s weather for %1$s: %2$s, %3$s/%4$s  #OpenWeatherMap</string>

    <!--bundle extras-->
    <string name="bundle_latitude">latitude</string>
    <string name="bundle_longitude">longitude</string>

    <!--intent extras-->
    <string name="intent_extra_latLng">latLngExtra</string>
    <string name="intent_extra_cityInfo">cityInfoExtra</string>

    <!--activity titles-->
    <string name="title_activity_city_list">Cities</string>
    <string name="title_activity_city_detail">Details</string>
    <string name="title_activity_settings">Settings</string>

    <!--unit formatting-->
    <string name="format_temperature"><xliff:g id="temp">%1.0f</xliff:g>\u00B0</string>
    <string name="format_humidity">Humidity: <xliff:g id="humidity">%1.0f</xliff:g> %%</string>
    <string name="format_wind_mph">Wind: <xliff:g id="speed">%1$1.0f</xliff:g> mph</string>
    <string name="format_wind_kmh">Wind: <xliff:g id="speed">%1$1.0f</xliff:g> km/h</string>

    <!--settings-->
    <string name="title_general_category">General</string>
    <string name="key_general_category">generalPreferences</string>

    <string name="preference_title_unit">Unit</string>
    <string name="preference_key_unit">unitPreference</string>

    <string name="unit_metric_title">Metric</string>
    <string name="unit_metric_value">metric</string>

    <string name="unit_imperial_title">Imperial</string>
    <string name="unit_imperial_value">imperial</string>

    <!--metric as default unit-->
    <string name="default_value_preference_unit">metric</string>

    <string-array name="title_units">
        <item>@string/unit_metric_title</item>
        <item>@string/unit_imperial_title</item>
    </string-array>

    <string-array name="value_units">
        <item>@string/unit_metric_value</item>
        <item>@string/unit_imperial_value</item>
    </string-array>

    <string name="string_ok">OK</string>
    <string name="string_cancel">Cancel</string>

    <!--cities count preference-->
    <string name="preference_key_citiesCount">citiesCountPreference</string>
    <string name="preference_title_citiesCount">Number of cities</string>
    <string name="preference_default_citiesCount">15</string>

    <!--weekly forecast preference-->
    <string name="preference_key_weeklyForecast">weeklyForecastPreference</string>
    <string name="preference_title_weeklyForecast">Weekly Forecast</string>
    <string name="preference_summary_weeklyForecast">Fetch a city\'s weekly forecast\n(consumes more broadband)</string>

</resources>
